<span class="page">
<h1 class="title">POKEDEX</h1>

<%= form_with url: pokemons_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a pokemon"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

  <span class = "pokemons">
    <% @pokemons.each do |pokemon| %>
    <%= link_to pokemon_path(pokemon) do %>
    <span class = "cards">

      <span class = "pkmn-name">
        <%= pokemon.name.capitalize %>
      </span>

      <span class="image-container">
        <img src="<%= pokemon.image %>" alt="<%= pokemon.name %>" class="pokemon-image">
      </span>

      <span class="info">
        <span class ="weight">
          <%= "Weight" %>
          <%= pokemon.weight %>
          <%= "lbs" %>
        </span>

        <span class= "type">
          <span class="type-container">
            <%= "Type" %>
          </span>
          <% pokemon.descriptions.each do |description| %>
          <%= description.capitalize %>
          <% end %>
        </span>

        <span class="abilities">
          <span class="ability-container">
            <%= "Ability" %>
          </span>
          <% pokemon.abilities.each do |ability|%>
            <%= ability.capitalize %>
          <% end %>
        </span>
    </span>
    </span>
      <% end %>
    <% end %>
  </span>
</span>
